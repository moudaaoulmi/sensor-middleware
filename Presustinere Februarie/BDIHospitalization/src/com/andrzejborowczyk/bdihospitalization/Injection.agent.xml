<!--
Injection Agent <br>
		
	
The agent injecting drugs.

-->
<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex 
	                    http://jadex.sourceforge.net/jadex-0.96.xsd"
	name="Injection" package="com.andrzejborowczyk.bdihospitalization">
	
	<imports>
		<import>jadex.adapter.fipa.*</import>
		<import>jadex.runtime.*</import>
		<import>jadex.planlib.*</import>
		<import>jadex.util.Tuple</import>
		<import>jadex.util.*</import>
		<import>jadex.*</import>
		<import>java.util.logging.*</import>
	</imports>
	
	<capabilities>
		<!-- Import capability of using Directory Facilitator from
		plan library -->
		<capability name="dfcap" file="jadex.planlib.DF"/>
	</capabilities>
	
	<beliefs>
		<beliefset name="heart_beat_drugs" class="Tuple">
			<fact>new Tuple("too_high", "valium")</fact>
			<fact>new Tuple("much_too_high", "super_valium")</fact>
			<fact>new Tuple("too_low", "adrenaline")</fact>
			<fact>new Tuple("much_too_low", "super_adrenaline")</fact>
		</beliefset>		

	</beliefs>
	
	
	<goals>
		<achievegoalref name="df_register">
			<concrete ref="dfcap.df_register"/>
		</achievegoalref>
		<!-- Used for deregistering the dealer at the df. -->
		<achievegoalref name="df_deregister">
			<concrete ref="dfcap.df_deregister"/>
		</achievegoalref>

	</goals>
	
	<plans>
		<plan name="gui">
			<body>new InjectionGUIPlan()</body>
		</plan>
		<!-- A  plan, from which a new instance is created
		whenever a drug applying request is received. -->
		<plan name="fix_heart_beat">
			<body>new FixHeartBeatPlan()</body>
			<trigger>
				<messageevent ref="inform_heart_beat"/>
			</trigger>
		</plan>
	</plans>
	
	<events>
		<internalevent name="gui_update">
			<parameter name="content" class="String[]"/>
		</internalevent>
		<!-- Incoming performative inform about the heart beat -->
		<messageevent name="inform_heart_beat" direction="receive" type="fipa">
			<parameter name="performative" class="String" direction="fixed">
				<value>SFipa.INFORM</value>
			</parameter>
			<parameter name="language" class="String" direction="fixed">
				<value>SFipa.JAVA_XML</value>
			</parameter>
		</messageevent>
	</events>
	
	<expressions>
		<expression name="query_heart_beat_drugs">
			select one $heart_beat_drug_pair.get(1)
			from Tuple $heart_beat_drug_pair in $beliefbase.heart_beat_drugs
			where $heart_beat_drug_pair.get(0).equals($heart_beat)
			<parameter name="$heart_beat" class="String"></parameter>
		</expression>
	</expressions>
	
	<configurations>
		<!-- Specifies default configuration in which the Injection Agent regiters 
		its service at DirectoryFacilitator -->
		<configuration name="default">
			<goals>
				<initialgoal ref="df_register">
					<parameter ref="description">
						<value>SFipa.createAgentDescription(null,
							SFipa.createServiceDescription("injection",
							"service_injection", null))</value>
					</parameter>
				</initialgoal>
				<endgoal ref="df_deregister"/>
			</goals>
			<plans>
				<initialplan ref="gui"/>
			</plans>
			
		</configuration>
	</configurations>
	
</agent>