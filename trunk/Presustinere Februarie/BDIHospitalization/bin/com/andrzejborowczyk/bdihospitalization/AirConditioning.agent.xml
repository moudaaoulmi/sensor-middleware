<!--
<H3>Air conditioning agent</H3>

The agent has the following main goal:<br>
	-keep room temperature in proper range
-->

<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex 
	                    http://jadex.sourceforge.net/jadex-0.96.xsd"
	name="AirConditioning" package="com.andrzejborowczyk.bdihospitalization">
	
	<imports>
		<import>jadex.adapter.fipa.*</import>
		<import>jadex.runtime.*</import>
		<import>jadex.planlib.*</import>
		<import>jadex.util.*</import>
		<import>jadex.*</import>
		<import>java.util.logging.*</import>
	</imports>
	
	<capabilities>
		<!-- Import capability of using Directory Facilitator from
		plan library -->
		<capability name="dfcap" file="jadex.planlib.DF"/>
	</capabilities>
	
	<beliefs>
		<!-- the current room temperature -->
		<belief name="room_temperature" class="int"><fact>40</fact></belief>
		<belief name="temperature_high" class="int"><fact>25</fact></belief>
		<belief name="target_temperature" class="int"><fact>23</fact></belief>
		<belief name="temperature_low" class="int"><fact>20</fact></belief>
	</beliefs>
	
	<goals>
		<!-- keep the temperature in the correct range -->
		<maintaingoal name="keep_temperature"  exclude="never" retry="true">
			
			<maintaincondition>$beliefbase.room_temperature &lt;= $beliefbase.temperature_high
			&amp;&amp; $beliefbase.room_temperature &gt;= $beliefbase.temperature_low </maintaincondition>
			
			<targetcondition> 
				$beliefbase.room_temperature == $beliefbase.target_temperature
			</targetcondition>
		</maintaingoal>
		
		<achievegoalref name="df_register">
			<concrete ref="dfcap.df_register"/>
		</achievegoalref>
		<!-- Used for deregistering the dealer at the df. -->
		<achievegoalref name="df_deregister">
			<concrete ref="dfcap.df_deregister"/>
		</achievegoalref>
	</goals>
	
	<plans>
		<plan name="gui">
			<body>new AdjustTemperatureGUIPlan()</body>
		</plan>
		<plan name="adjust_temperature">
			<body>new AdjustTemperaturePlan()</body>
			<trigger>
				<goal ref="keep_temperature">		
				</goal>
			</trigger>
		</plan>
		<plan name="temperature_desire">
			<body>new ACSetTemperature()</body>
			<trigger>
				<messageevent ref="inform_temperature_desire">					
				</messageevent>
			</trigger>
				
		</plan>
	</plans>
	
	<events>	
		<internalevent name="gui_update">
			<parameter name="content" class="String[]"/>
		</internalevent>	
		
		<!-- Incoming performative inform about the temperature desire -->
		<messageevent name="inform_temperature_desire" direction="receive" type="fipa">
			<parameter name="performative" class="String" direction="fixed">
				<value>SFipa.INFORM</value>
			</parameter>
			<parameter name="language" class="String" direction="fixed">
				<value>SFipa.JAVA_XML</value>
			</parameter>
		</messageevent>			

	</events>
	
	<configurations>
		<configuration name="default">
			<goals>
				<initialgoal ref="keep_temperature"/>	
				<initialgoal ref="df_register">
					<parameter ref="description">
						<value>SFipa.createAgentDescription(null,
							SFipa.createServiceDescription("airconditioning",
							"service_airconditioning", null))</value>
					</parameter>
				</initialgoal>
				<endgoal ref="df_deregister"/>			
			</goals>
			<plans>
				<initialplan ref="gui"/>
			</plans>
		</configuration>
	</configurations>
</agent>